name: English IPA (Epitran)

on:
  workflow_dispatch: {}   # run manually from Actions

permissions:
  contents: write         # lets us optionally commit the CSV

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Check out repo
        uses: actions/checkout@v4

      - name: Verify input exists and preview
        run: |
          if [ ! -f data/english.txt ]; then
            echo "ERROR: data/english.txt not found. Create it in the repo." >&2
            exit 1
          fi
          echo "✅ Found data/english.txt"
          echo "----- HEAD (first 20 lines) -----"
          head -n 20 data/english.txt || true
          echo "---------------------------------"

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install Python deps (Epitran)
        run: |
          python -m pip install --upgrade pip
          pip install epitran pandas

      - name: Transcribe English to IPA with Epitran (eng-Latn)
        run: |
          python - << 'PY'
          import os, csv, re, sys
          import epitran

          INP = 'data/english.txt'
          OUT = 'outputs/english.csv'
          os.makedirs('outputs', exist_ok=True)

          # Load blocks (twisters) separated by 1+ blank lines; join internal lines
          with open(INP, encoding='utf-8') as f:
            raw = f.read()
          raw = re.sub(r'[ \t]+$', '', raw, flags=re.M)
          blocks = []
          for blk in re.split(r'(?:\r?\n){2,}', raw):
            lines = [ln.strip() for ln in blk.splitlines() if ln.strip()]
            if lines:
              blocks.append(' '.join(lines))

          n = len(blocks)
          print(f"INFO: Found {n} blocks.")
          if n == 0:
            print("ERROR: No blocks found. Put at least one twister in data/english.txt (blank line between twisters).")
            sys.exit(1)

          epi = epitran.Epitran('eng-Latn')   # English, Latin script

          rows = []
          for i, text in enumerate(blocks, 1):
            ipa = epi.transliterate(text)
            rows.append((text, ipa))
            if i <= 3:
              print(f"Sample {i}: {ipa}")

          with open(OUT, 'w', encoding='utf-8', newline='') as g:
            w = csv.writer(g)
            w.writerow(['text','ipa'])
            w.writerows(rows)

          print(f"✅ Wrote {OUT} with {len(rows)} rows.")
          PY

      - name: Show outputs folder
        run: ls -lah outputs || true

      - name: Upload CSV as artifact
        uses: actions/upload-artifact@v4
        with:
          name: english-ipa-epitran
          path: outputs/english.csv

      # If you want the CSV to appear in the repo tree as well:
      # 1) Edit .gitignore to allow CSVs:
      #    outputs/*
      #    !outputs/eng-Latin.json
      #    !outputs/*.csv
